    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Fashion E-commerce",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Vue: Fashion E-commerce",
            "request": "launch",
            "cwd": "${workspaceFolder}/front",
            // "runtimeArgs": [
            //     "run",
            //     "serve"
            // ],
            "args": [
                "run",
                "serve"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}
